<h1><%= t '.title' %></h1>
<p><%= t '.author_photo' %>: <strong><%= @photo.user.name %></strong></p>
<p><%= t '.email' %>: <strong><%= mail_to @photo.user.email %></strong></p>

<hr/>

<%= t '.event' %>
<h3><%= link_to @event.title, event_url(@event) %></h3>

<p><%= t '.datetime' %></p>
<h4><%= l @event.datetime %></h4>

<p><%= t '.owner' %></p>
<h4><%= @event.user.name %></h4>

<% if @photo.photo.url %>
  <%= link_to image_tag(@photo.photo.thumb.url), @photo.photo.url %>
<% else %>
  <span><strong>Ошибка отображения фото</strong></span>
<% end %>
