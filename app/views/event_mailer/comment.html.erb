<h1><%= t '.title' %></h1>
<p><%= @comment.body %></p>
<p><%= t '.author' %>: <strong><%= @comment.user_name %></strong></p>

<% if @comment.user.nil? %>
	<p><%= t '.email' %>: <strong><%= 'Комментатор не зарегистрирован, email отсутствует'  %></strong></p>
<% else %>
	<p><%= t '.email' %>: <strong><%= mail_to @comment.user.email  %></strong></p>
<% end %>

<hr/>

<%= t '.event' %>
<h3><%= link_to @event.title, event_url(@event) %></h3>

<%= t '.datetime' %>
<h4><%= l @event.datetime %></h4>

<%= t '.owner' %>
<h4><%= @event.user.name %></h4>

