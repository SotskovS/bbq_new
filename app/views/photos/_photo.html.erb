<div class="event-photo buffer-both">

	<% if photo.photo.url %>
		<%= link_to image_tag(photo.photo.thumb.url), photo.photo.url %>
	<% else %>
		<span><strong>Ошибка отображения фото</strong></span>
	<% end %>

  Добавил <%= render partial: 'users/user', object: photo.user %>

  <% if current_user_can_edit?(photo) %>
		<%= link_to(
			fa_icon('times'),
			event_photo_path(photo.event, photo),
			method: :delete,
			data: { confirm: t('.destroy_confirm')}
		) %>
	<% end %>

</div>
