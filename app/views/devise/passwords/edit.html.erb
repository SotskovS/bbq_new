<%= form_for @user, html: { multipart: true } do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="ui-15">
    <div class="container">
      <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-6 ui-padd mr-auto">
          <div class="ui-form">
            <h2>Изменение пароля</h2>
              <form>
                <div class="ui-input">
                  <div class="field">
                    <%= f.label :password, fa_icon('lock'), class: "ui-icon" %>
                    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Введите новый пароль(не менее 6 знаков)', class: "form-control" %>
                  </div>
                </div>

              <div class="ui-input">
                <div class="field">
                  <%= f.label :password_confirmation, fa_icon('lock'), class: "ui-icon" %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Повторите пароль', class: "form-control" %>
                </div>
              </div>
              <%= f.submit "Сохранить", class: "btn btn-red btn-lg btn-block" %> или <%= link_to 'вернуться', :back %>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
