<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="ui-15">
    <div class="container">
      <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-6 ui-padd mr-auto">
          <div class="ui-form">
            <h2>Авторизация</h2>
              <form>
                <div class="ui-input">
                  <div class="field">
                    <%= f.label :email, fa_icon('envelope-o'), class: "ui-icon" %>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Введите Email', class: "form-control" %>
                  </div>
                </div>
                <div class="ui-input">
                  <div class="field">
                    <%= f.label :password, fa_icon('lock'), class: "ui-icon" %>
                    <%= f.password_field :password, autocomplete: "current-password-password", placeholder: 'Введите пароль', class: "form-control" %>
                  </div>
                </div>
              <% if devise_mapping.rememberable? %>
                <div class="field for">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <%= f.submit "Войти", class: "btn btn-green btn-lg btn-block" %>
              </form>
              <%= render "devise/shared/links" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
